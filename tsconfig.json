{
	"compilerOptions": {
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			},
			{
				"name": "next"
			}
		],
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"*.d.ts",
		".next/types/**/*.ts",
		"jest.config.ts"
		// "app",
		// "entities",
		// "features",
		// "shared",
		// "widgets",
		// "config"
	],
	"exclude": ["node_modules"]
}
